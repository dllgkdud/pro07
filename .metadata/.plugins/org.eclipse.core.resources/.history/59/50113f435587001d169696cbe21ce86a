<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="notice">
	<select id="noticeList" resultType="kr.go.mofa.dto.NoticeDTO">
		select * from nnotice
	</select>
	<select id="noticeOne" resultType="kr.go.mofa.dto.NoticeDTO">
		select * from nnotice where no = #{no}
	</select>
	<update id="updateHits">
		update nnotice set hits=hits+1 where no = #{no}
	</update>
	<insert id="addNotice">
		insert into nnotice(title, content, dept, regdate) values #{title}, #{content}, '혁신행정담당관실', now()
	</insert>
</mapper>