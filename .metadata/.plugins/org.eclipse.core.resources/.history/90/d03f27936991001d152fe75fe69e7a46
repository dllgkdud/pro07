<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data">
	<select id="dataList" resultType="kr.go.mofa.dto.DataDTO">
		select * from data
	</select>
	<select id="dataOne" resultType="kr.go.mofa.dto.DataDTO">
		select * from data where no = #{no}
	</select>
	<update id="updateHits">
		update data set hits=hits+1 where no = #{no}
	</update>
	<insert id="adddata">
		insert into data(title,content,dept,regdate) values(#{title},#{content},#{dept},now())
	</insert>
	<update id="upddata">
		update data set title = #{title}, content = #{content} where no = #{no}
	</update>
	<delete id="deldata">
		delete from data where no = #{no}
	</delete>
</mapper>